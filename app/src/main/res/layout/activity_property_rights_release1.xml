<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/contentbg">

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ff9900"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/back_Iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="left"
            android:scaleType="centerInside"
            android:src="@drawable/reg_back_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/want_release"
            android:textColor="@android:color/white"
            android:textSize="20sp" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:scaleType="centerInside"
            android:src="@mipmap/logo" />


    </RelativeLayout>
    <TextView
        android:id="@+id/text1"
        android:layout_below="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/choice_release_content"
        android:gravity="center_horizontal"
        android:padding="10dp"/>
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text1"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <TableLayout
            android:id="@+id/table_LL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text1"
            android:background="@android:color/white"
            android:shrinkColumns="1,2,3"
            android:stretchColumns="1,2,3">


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

                <ImageView
                    android:layout_column="0"
                    android:layout_gravity="center|center_vertical"
                    android:src="@drawable/release_red_dot"
                    android:paddingLeft="20dp"
                    android:paddingRight="10dp"/>

                <TextView
                    android:layout_column="1"
                    android:background="@null"
                    android:layout_gravity="left|center_vertical"
                    android:text="@string/property_type"/>

                <Spinner
                    android:layout_column="2"
                    android:layout_gravity="center|center_vertical"
                    android:layout_marginLeft="100dp"/>

            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#B7B7B7" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingTop="10dp">

                <ImageView
                    android:layout_column="0"
                    android:layout_gravity="center|center_vertical"
                    android:src="@drawable/release_red_dot"
                    android:paddingLeft="20dp"
                    android:paddingRight="10dp"/>

                <TextView
                    android:layout_column="1"
                    android:background="@null"
                    android:layout_gravity="left|center_vertical"
                    android:text="@string/property_position"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">
                <LinearLayout
                    android:layout_span="3"
                    android:layout_gravity="center_horizontal">
                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/province_Sp1" />

                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/city_Sp1"/>

                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/area_Sp1"/>

                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/village_Sp1"/>

                </LinearLayout>
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#B7B7B7" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

                <ImageView
                    android:layout_column="0"
                    android:layout_gravity="center|center_vertical"
                    android:src="@drawable/release_red_dot"
                    android:paddingLeft="20dp"
                    android:paddingRight="10dp"/>

                <TextView
                    android:layout_column="1"
                    android:background="@null"
                    android:layout_gravity="left|center_vertical"
                    android:text="@string/transfer_mode"/>
                <Spinner
                    android:layout_column="2"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginLeft="30dp"/>
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#B7B7B7" />


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_column="0"
                    android:layout_gravity="center|center_vertical"
                    android:src="@drawable/release_red_dot"
                    android:paddingLeft="20dp"
                    android:paddingRight="10dp"/>

                <TextView
                    android:layout_column="1"
                    android:background="@null"
                    android:layout_gravity="left|center_vertical"
                    android:text="@string/measure_area"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/please_input"
                    android:textSize="15dp"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginLeft="50dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/mu"
                    android:textSize="15dp"
                    android:layout_gravity="left|center_vertical"/>

            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_column="0"
                    android:layout_gravity="center|center_vertical"
                    android:src="@drawable/release_red_dot"
                    android:paddingLeft="20dp"
                    android:paddingRight="10dp"/>

                <TextView
                    android:layout_column="1"
                    android:background="@null"
                    android:layout_gravity="left|center_vertical"
                    android:text="@string/transfer_term"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/please_input"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginLeft="50dp"
                    android:textSize="15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/year"
                    android:textSize="15dp"
                    android:layout_gravity="left|center_vertical"/>

            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#B7B7B7" />
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_column="0"
                    android:layout_gravity="center|center_vertical"
                    android:src="@drawable/release_red_dot"
                    android:paddingLeft="20dp"
                    android:paddingRight="10dp"/>

                <TextView
                    android:layout_column="1"
                    android:background="@null"
                    android:layout_gravity="left|center_vertical"
                    android:text="@string/price"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/please_input"
                    android:textSize="15dp"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginLeft="40dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/million_yuan"
                    android:textSize="15dp"
                    android:layout_gravity="left|center_vertical"
                    android:paddingRight="20dp"/>

            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#B7B7B7" />
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <ImageView
                    android:layout_column="0"
                    android:layout_gravity="center|center_vertical"
                    android:src="@drawable/release_red_dot"
                    android:paddingLeft="20dp"
                    android:paddingRight="10dp"/>

                <TextView
                    android:layout_column="1"
                    android:background="@null"
                    android:layout_gravity="left|center_vertical"
                    android:text="@string/release_time"/>
                <LinearLayout
                    android:layout_column="2">
                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/year_release1"/>

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/month_release1" />

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/day_release1" />
                </LinearLayout>

            </TableRow>


        </TableLayout>


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/table_LL"
            android:layout_marginTop="80dp"
            android:src="@drawable/release_next_step"/>
    </LinearLayout>



</RelativeLayout>
