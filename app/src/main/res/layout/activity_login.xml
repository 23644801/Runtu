<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:background="@drawable/login_bg"
    android:padding="15dp">


    <EditText
        android:id="@+id/username_Et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="114dp"
        android:background="@null"
        android:drawableLeft="@drawable/login_picture_icon"
        android:drawablePadding="15dp"
        android:hint="@string/login_username_hint"
        android:padding="5dp"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textSize="15sp" />

    <View
        android:id="@+id/username_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/username_Et"
        android:background="@android:color/white" />


    <EditText
        android:id="@+id/password_Et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username_line"
        android:layout_marginTop="20dp"
        android:background="@null"
        android:drawableLeft="@drawable/login_lock_icon"
        android:drawablePadding="15dp"
        android:hint="@string/login_password_hint"
        android:padding="5dp"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textSize="15sp" />

    <View
        android:id="@+id/password_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/password_Et"
        android:background="@android:color/white" />


    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password_line"
        android:layout_marginTop="20dp"
        android:button="@drawable/login_checkck_selector"
        android:checked="false"
        android:drawablePadding="10dp"
        android:paddingLeft="10dp"
        android:text="@string/login_protocol"
        android:textColor="@android:color/white" />


    <TextView
        android:id="@+id/forgot_pwd_Tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/password_line"
        android:layout_marginTop="20dp"
        android:checked="false"
        android:text="@string/forget_password"
        android:textColor="@android:color/white" />

    <ImageView
        android:id="@+id/login_Iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBox"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:src="@drawable/login_submit_btn" />


    <ImageView
        android:id="@+id/reg_Iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_Iv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:src="@drawable/login_reg_btn" />


</RelativeLayout>
