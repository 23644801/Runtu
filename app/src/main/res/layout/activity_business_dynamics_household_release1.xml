<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ff9900"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/back_Iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="left"
            android:scaleType="centerInside"
            android:src="@drawable/reg_back_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/merchants_dynamic"
            android:textColor="@android:color/white"
            android:textSize="20sp" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:scaleType="centerInside"
            android:src="@mipmap/logo" />

    </RelativeLayout>
    <TextView
        android:id="@+id/text1"
        android:layout_below="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/choice_release_class_type"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:background="@color/contentbg"/>
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text1"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:padding="10dp">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@null"
            android:layout_gravity="left|center_vertical"
            android:text="@string/product_type"
            android:drawableLeft="@drawable/release_red_dot"
            android:paddingLeft="20dp"
            android:drawablePadding="10dp"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="50dp">
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>
    <View
        android:id="@+id/line1"
        android:layout_below="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#B7B7B7" />
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line1"
        android:orientation="vertical"
        android:background="#ffffff"
        android:padding="10dp">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@null"
            android:layout_gravity="left|center_vertical"
            android:text="@string/Agricultural_products_place"
            android:drawableLeft="@drawable/release_red_dot"
            android:paddingLeft="20dp"
            android:drawablePadding="10dp"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingTop="5dp">
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>
    <View
        android:id="@+id/line2"
        android:layout_below="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#B7B7B7" />
    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line2"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:padding="10dp">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@null"
            android:layout_gravity="left|center_vertical"
            android:text="@string/title"
            android:drawableLeft="@drawable/release_red_dot"
            android:paddingLeft="20dp"
            android:drawablePadding="10dp"
            android:layout_weight="1"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/input_title"
            android:textSize="15dp"
            android:background="@null"
            android:paddingRight="20dp"/>

    </LinearLayout>
    <View
        android:id="@+id/line3"
        android:layout_below="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#B7B7B7" />
    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line3"
        android:orientation="vertical"
        android:background="#ffffff"
        android:padding="10dp">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@null"
            android:layout_gravity="left|center_vertical"
            android:text="@string/detailed_description"
            android:drawableLeft="@drawable/release_red_dot"
            android:paddingLeft="20dp"
            android:drawablePadding="10dp"
            android:layout_weight="1"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/input_detailed_content"
            android:background="@null"
            android:textSize="15dp"
            android:paddingLeft="30dp"
            android:paddingTop="5dp"
            android:lines="3"
            android:gravity="start"/>

    </LinearLayout>
    <View
        android:id="@+id/line4"
        android:layout_below="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#B7B7B7" />
    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line4"
        android:orientation="vertical"
        android:background="#ffffff"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_photos"
                android:textSize="20dp"
                android:layout_weight="1"
                android:paddingLeft="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_photos_describe"
                android:layout_weight="1"
                android:paddingLeft="10dp"/>
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo"
            android:paddingTop="20dp"
            android:paddingLeft="20dp"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/next_Iv"
        android:layout_below="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/release_next_step"
        android:paddingTop="20dp"/>
</RelativeLayout>