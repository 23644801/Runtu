<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ff9900"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/back_Iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="left"
            android:scaleType="centerInside"
            android:src="@drawable/reg_back_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/logistics_information"
            android:textColor="@android:color/white"
            android:textSize="20sp" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:scaleType="centerInside"
            android:src="@mipmap/logo" />

    </RelativeLayout>
    <TextView
        android:id="@+id/text1"
        android:layout_below="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/choice_incidentally_information"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:background="@color/contentbg"/>
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text1"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:padding="10dp">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@null"
            android:layout_gravity="left|center_vertical"
            android:text="@string/type_of_goods"
            android:drawableLeft="@drawable/release_red_dot"
            android:paddingLeft="20dp"
            android:drawablePadding="10dp"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="50dp">
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>
    <View
        android:id="@+id/line1"
        android:layout_below="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#B7B7B7" />
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line1"
        android:orientation="vertical"
        android:background="#ffffff"
        android:padding="10dp">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@null"
            android:layout_gravity="left|center_vertical"
            android:text="@string/cargo_weight"
            android:drawableLeft="@drawable/release_red_dot"
            android:paddingLeft="20dp"
            android:drawablePadding="10dp"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingTop="5dp"
            android:paddingRight="20dp">
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/input_weight"
                android:textSize="15dp"
                android:background="@null"
                android:paddingRight="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ton"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

    </LinearLayout>
    <View
        android:id="@+id/line2"
        android:layout_below="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#B7B7B7" />
    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line2"
        android:orientation="vertical"
        android:background="#ffffff"
        android:padding="10dp">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@null"
            android:layout_gravity="left|center_vertical"
            android:text="@string/destination"
            android:drawableLeft="@drawable/release_red_dot"
            android:paddingLeft="20dp"
            android:drawablePadding="10dp"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingTop="5dp"
            android:paddingRight="20dp">
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>


    </LinearLayout>
    <View
        android:id="@+id/line3"
        android:layout_below="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#B7B7B7" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line3"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:padding="10dp">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@null"
            android:layout_gravity="left|center_vertical"
            android:text="@string/release_person"
            android:drawableLeft="@drawable/release_red_dot"
            android:paddingLeft="20dp"
            android:drawablePadding="10dp"
            android:layout_weight="1"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/input_name"
            android:textSize="15dp"
            android:background="@null"
            android:paddingRight="20dp"/>

    </LinearLayout>
    <View
        android:id="@+id/line4"
        android:layout_below="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#B7B7B7" />
    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line4"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:padding="10dp">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@null"
            android:layout_gravity="left|center_vertical"
            android:text="@string/contact_information"
            android:drawableLeft="@drawable/release_red_dot"
            android:paddingLeft="20dp"
            android:drawablePadding="10dp"
            android:layout_weight="1"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/lsc_release_phone_hint"
            android:textSize="15dp"
            android:background="@null"
            android:paddingRight="20dp"/>

    </LinearLayout>
    <View
        android:id="@+id/line5"
        android:layout_below="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#B7B7B7" />
    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line5"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:padding="10dp">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@null"
            android:layout_gravity="left|center_vertical"
            android:text="@string/contact_information"
            android:drawableLeft="@drawable/release_red_dot"
            android:paddingLeft="20dp"
            android:drawablePadding="10dp"
            android:layout_weight="1"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/input_mobile_phone_number"
            android:textSize="15dp"
            android:background="@null"
            android:paddingRight="20dp"/>

    </LinearLayout>
    <View
        android:id="@+id/line6"
        android:layout_below="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#B7B7B7" />
    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line6"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:padding="10dp">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@null"
            android:layout_gravity="left|center_vertical"
            android:text="@string/verification_code"
            android:drawableLeft="@drawable/release_red_dot"
            android:paddingLeft="20dp"
            android:drawablePadding="10dp"
            android:layout_weight="1"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/input_verification_code"
            android:textSize="15dp"
            android:background="@null"
            android:paddingRight="20dp"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#B7B7B7"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/get_verification_code"
            android:textColor="#ff9900"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"/>

    </LinearLayout>
    <View
        android:id="@+id/line7"
        android:layout_below="@+id/linearLayout7"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#B7B7B7" />
    <ImageView
        android:id="@+id/release_Iv"
        android:layout_below="@+id/line7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/confirm_release"
        android:paddingTop="20dp"/>
</RelativeLayout>