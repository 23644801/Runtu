<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mac.runtu">

    <!-- if you want to load images from the internet -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- if you want to load images from a file OR from the internet -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.RegistOneActivity" />
        <activity android:name=".activity.RegistTwoActivity" />
        <activity android:name=".activity.MainActivity" />
        <activity android:name=".activity.ForgetOnePwdActivity" />
        <activity android:name=".activity.ForgetTwoPwdActivity" />
        <activity android:name=".activity.PersonalCenterActitity" />
        <activity android:name=".activity.PersonalCenterSettingActivity" />
        <activity android:name=".activity.OrderActivity" />
        <activity android:name=".activity.VersionActivity" />
        <activity android:name=".activity.HelpActivity" />
        <activity android:name=".activity.AboutUsActivity" />
        <activity android:name=".activity.SuggestionActivity" />
        <activity android:name=".activity.OrderPayActivity" />
        <activity android:name=".activity.ManageReceiptAddressActivity" />
        <activity android:name=".activity.AddReceiptAddressActivity" />
        <activity android:name=".activity.PersonalInfoActivity"></activity>
    </application>

</manifest>